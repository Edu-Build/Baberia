<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Formulario de Reservacion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form enctype="application/x-www-form-urlencoded" action="~/Home/Mail?e">
                    <div class="form-group">
                        <input name ="e" type="email" class="form-control" id="rEmail" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="rName" placeholder="Nombre Cliente">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="rflName" placeholder="Apellidos">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Servicio</label>
                            <select id="rService" class="form-control">
                                <option selected>Elija servicio:</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Sucursal</label>
                            <select id="rStore" class="form-control">
                                <option selected>Elija sucursal:</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input class="form-control" id="rDate" placeholder="Fecha reservacion">
                        </div>
                        <div class="form-group col-md-6">
                            <input type="text" class="form-control" id="rHour" placeholder="Hora reservacion">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck">
                            <label class="form-check-label" for="gridCheck"> Acepta Terminos y Condiciones </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary" id="btnReservar">Realizar Reservacion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>







