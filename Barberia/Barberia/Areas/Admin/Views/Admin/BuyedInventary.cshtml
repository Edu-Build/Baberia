
<div class="tableBuyed">
    <div class="row mt-3">
        <div class="col-md-12">
            <h2 class="text-md-center mt-md-4">Registro de compras de Inventario</h2>
        </div>
    </div>

    <div class="row mt-5 align-items-center">
        <div class="col-md-4 ">
            <h2>Registrar Compra</h2>
            <form class="form">
                <div class="form-group">
                    <label >Producto:</label>
                    <select id="bProduct" class="form-control">
                        <option selected>Elija Producto:</option>
                    </select>
                </div>
                <div class="form-group">
                    <label> Precio de compra</label>
                    <input type="text" class="form-control" id="bBuyed">
                </div>
                <div class="form-group">
                    <label> Cantidad</label>
                    <input type="text" class="form-control" id="bQuantity">
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Limpiar</button>
                <button type="submit" class="btn btn-info" id="btnCreateBuyed">Registrar</button>
            </div>
        </div>
        <div class="col-md-8tableProduct">
            <table class="table table-hover table-responsive " id="listBuyed">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Producto</th>
                        <th>Precio Compra</th>
                        <th>Cantidad</th>
                        <th>Register</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Eliminar Resgistro -->
<div class="modal fade" id="modalDeleteBuyed" tabindex="-1" role="dialog" aria-labelledby="modalDeleteLabelBuyed">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalDeleteLabelBuyed">Eliminar Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5 class="h5">¿Esta seguro de <strong> eliminar este registro?</strong></h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="btnDeleteBuyed" data-dismiss="modal">Eliminar</button>
            </div>
        </div>
    </div>
</div>
